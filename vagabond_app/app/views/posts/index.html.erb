<h1>Posts</h1>
<br>
  <% @posts.each do |post| %>
    <div>
      <h3><%= link_to post.title, post_path(post) %></h3>
      <h4> <strong>Posted by:</strong> <%= User.find_by_id(post.user_id).name %> </h5>
      <h4> <strong>City:</strong> <%= City.find_by_id(post.city_id).name %> </h5>
    </div>
  <br>
<% end %>
